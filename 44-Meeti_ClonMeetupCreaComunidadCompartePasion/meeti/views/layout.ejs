<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Meeti - <%- nombrePagina %> </title>
    <!-- Normalize.css -->
    <link rel="stylesheet" href="https://necolas.github.io/normalize.css/8.0.1/normalize.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&family=Staatliches&display=swap" rel="stylesheet">
    <!-- <link href="https://fonts.googleapis.com/css2?family=Raleway:ital@0;1&family=Staatliches&display=swap" rel="stylesheet"> -->
    <!-- <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,700;1,700&family=Staatliches&display=swap" rel="stylesheet"> -->
    <!-- <link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,900;1,900&family=Staatliches&display=swap" rel="stylesheet"> -->
    <!-- Trix Editor CDN -->
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/trix@2.0.8/dist/trix.css">
    <!-- Leaflet CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>

    <!-- Header -->
    <header class="contenedor site-header">
        <a href="/">
            <img src="/img/logo.png" alt="Logo Meeti">
        </a>

        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="/iniciar-sesion">Iniciar Sesión</a>
            <a href="/crear-cuenta">Registrarse</a>
        </nav>
    </header>

    <!-- Flash messages -->
    <% if (locals.mensajes) { %>
        <% const categoria = Object.keys(locals.mensajes) %>
        <!-- Comentarios en EJS -->
        <% /* %><%= categoria %><% */ %>
        <%#= categoria  %>
        <% if (categoria.length) { %>
            <% locals.mensajes[categoria].forEach(alerta => { %>
                <div class="alertas">
                    <p class="alerta <%= categoria %>"><%= alerta %></p>
                </div>
            <% }) %>
        <% } %>
    <% } %>

    <!-- Inyectar el contenido de las views -->
    <%- body %>
    
    <!-- Footer -->
    <footer class="contenedor site-footer">
        <nav class="nav">
            <a href="#">Crear Grupo</a>
            <a href="/iniciar-sesion">Iniciar Sesión</a>
            <a href="/crear-cuenta">Registrarse</a>
        </nav>

        <!-- <p class="copyright">Todos los derechos reservados Meeti 2024 &copy;</p> -->
        <p class="copyright">Todos los derechos reservados Meeti <%- year %> &copy;</p>
        <!-- <p class="copyright">Todos los derechos reservados Meeti <%- locals.year %> &copy;</p> -->
    </footer>

    <!-- Trix Editor CDN -->
    <script type="text/javascript" src="https://unpkg.com/trix@2.0.8/dist/trix.umd.min.js"></script>
    <!-- Leaflet CDN -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script type="text/javascript" src="/dist/bundle.js"></script>

</body>
</html>