<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <form action="/nuevo-grupo" method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" placeholder="Nombre Grupo">
        </div>
        <!-- Trix Editor -->
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor trix-editor">
                <input type="hidden" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <!-- <select name="categoria" id="categoria"> -->
            <select name="categoriaId" id="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria => { %>
                    <option value="<%= categoria.id %>"><%= categoria.nombre %></option>
                <% }) %>
            </select>
        </div>
        <div class="campo">
            <label for="imagen">Imagen</label>
            <input type="file" name="imagen" id="imagen">
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="url" name="url" id="url" placeholder="Sitio Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>