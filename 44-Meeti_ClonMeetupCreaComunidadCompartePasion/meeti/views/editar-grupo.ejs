<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %></h1>

    <!-- Si no se define ACTION toma la URL de la anterior solicitud  -->
    <form method="POST" class="default-form">
        <div class="campo">
            <label for="nombre">Nombre</label>
            <input type="text" name="nombre" id="nombre" value="<%= grupo.nombre %>" placeholder="Nombre Grupo">
        </div>
        <!-- Trix Editor -->
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor trix-editor">
                <input type="hidden" name="descripcion" value="<%= grupo.descripcion %>" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label for="categoria">Categoría</label>
            <select name="categoriaId" id="categoria">
                <option value="" selected disabled>-- Elige una categoria --</option>
                <%# categorias.forEach(categoria => { %>
                    <!-- <option value="<%#= categoria.id %>"><%#= categoria.nombre %></option> -->
                <%# }) %>
            </select>
        </div>
        <div class="campo">
            <label for="url">Sitio Web</label>
            <input type="url" name="url" id="url" value="<%= grupo.url %>" placeholder="Sitio Web">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios" class="btn btn-rosa">
        </div>
    </form>
</main>