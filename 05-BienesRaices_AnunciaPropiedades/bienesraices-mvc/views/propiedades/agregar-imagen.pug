extends ../layout/admin

block styles 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")   
    //- Agregar el token csrf en el meta del header
    meta(name="csrf-token" content= csrfToken)

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow px-4 py-8 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}` id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center")
                //- Protecci√≥n CSRF
                input(type="hidden", name="_csrf" value= csrfToken)

            button(type="button" id="publicar" class="w-full py-3 mt-5 bg-indigo-600 hover:bg-indigo-700 roundend text-white font-bold uppercase cursor-pointer") Publicar Propiedad

block scripts
    script(src="/js/agregarImagen.js")
