extends ../layout/admin

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        a(href="/propiedades/crear" class="rounded px-10 py-2 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full sm:w-auto") Publicar Propiedad

        //- Visualizando la informacion formateada de las propiedades
        //- pre= JSON.stringify(propiedades, undefined, 2)

        if propiedades.length 
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 gap-4")
                                //- div(class="sm:w-1/4 md:w-1/6 lf:w-1/6")
                                div(class="sm:w-1/4 md:w-1/6") 
                                    img(src=`uploads/${propiedad.imagen}`, alt=`Imagen propiedad ${propiedad.titulo}` class="w-full block")
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6") 
                                    //- truncate - en dispositivos mobile si el titulo toma mucho espacio lo cortar√°
                                    a(href="#" class="block text-2xl font-extrabold text-indigo-600 truncate")= propiedad.titulo

                                    p(class="text-sm text-black font-bold")= propiedad.categoriaId

                                div(class="sm:w-1/4 md:w-2/6 lg:w-1/6") 3
        else 
            p.text-center No hay propiedades