        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" id="empresa" value="{{vacante.empresa}}" placeholder="Empresa Contrata" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicaci贸n</label>
            <input type="text" name="ubicacion" id="ubicacion" value="{{vacante.ubicacion}}" placeholder="Ej: Bolivia o Remoto" required>
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" id="salario" value="{{vacante.salario}}" placeholder="Ej: 500 USD" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato" id="contrato">
                {{#tipoContrato vacante.contrato}}
