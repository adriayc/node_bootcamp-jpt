            <trix-editor input="x"></trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}            {{!-- x: puede ser cual caracter o texto (Resuelve el error de 'Cannot read properties of undefined (reading "  fn")') --}}
                {{!-- <li>Hola amigos de Udemy</li> --}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            {{!-- Hidden inputs --}}
            <input type="hidden" name="skills" id="skills">

            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>